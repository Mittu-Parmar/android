<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/layout_background"
    android:elevation="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/your_recent_orders_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Your recent ordes"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/recent_order_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_recent_orders_title">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView5"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:elevation="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/banner_slider_img"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="4dp" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView6"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:elevation="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/banner_slider_img"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="4dp" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView7"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:elevation="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/banner_slider_img"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="4dp" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView8"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:elevation="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/banner_slider_img"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="4dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>